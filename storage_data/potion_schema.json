{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "name",
        "item_type",
        "rarity",
        "homebrew",
        "details"
    ],
    "properties": {
        "name": {
            "type": "string",
            "default": "",
            "title": "The name Schema",
            "examples": [
                "Potion of Healing"
            ],
            "not": {"enum": ["name"]}
        },
        "item_type": {
            "type": "string",
            "default": "",
            "title": "The item_type Schema",
            "examples": [
                "potion"
            ],
            "enum": ["potion"]
        },
        "rarity": {
            "type": "string",
            "default": "",
            "title": "The rarity Schema",
            "examples": [
                "common"
            ],
            "enum": ["common", "uncommon", "rare", "varies", "very rare", "artifact", "legendary"]
        },
        "homebrew": {
            "type": "boolean",
            "default": false,
            "title": "The homebrew Schema",
            "examples": [
                false
            ]
        },
        "details": {
            "type": "string",
            "default": "",
            "title": "The details Schema",
            "examples": [
                "A character who drinks the magical red fluid in this vial regains 2d4 + 2 hit points. Drinking or administering a potion takes an action."
            ],
            "not": {"enum": ["Item details"]}
        }
    },
    "examples": [{
        "name": "Potion of Healing",
        "item_type": "potion",
        "rarity": "common",
        "homebrew": false,
        "details": "A character who drinks the magical red fluid in this vial regains 2d4 + 2 hit points. Drinking or administering a potion takes an action."
    }]
}