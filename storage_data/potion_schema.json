{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "name",
        "item_type",
        "rarity",
        "homebrew",
        "details"
    ],
    "properties": {
        "name": {
            "type": "string",
            "default": "",
            "title": "The name Schema",
            "examples": [
                "name"
            ]
        },
        "item_type": {
            "type": "string",
            "default": "",
            "title": "The item_type Schema",
            "examples": [
                "potion"
            ],
            "enum": ["potion"]
        },
        "rarity": {
            "type": "string",
            "default": "",
            "title": "The rarity Schema",
            "examples": [
                "rarity"
            ],
            "enum": ["common", "uncommon", "rare", "varies", "very rare", "artifact", "legendary"]
        },
        "homebrew": {
            "type": "boolean",
            "default": false,
            "title": "The homebrew Schema",
            "examples": [
                false
            ]
        },
        "details": {
            "type": "string",
            "default": "",
            "title": "The details Schema",
            "examples": [
                "Item details"
            ]
        }
    },
    "examples": [{
        "name": "name",
        "item_type": "potion",
        "rarity": "rarity",
        "homebrew": false,
        "details": "Item details"
    }]
}