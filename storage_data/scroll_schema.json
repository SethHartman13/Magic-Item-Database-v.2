{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "name",
        "item_type",
        "rarity",
        "level",
        "spells",
        "homebrew",
        "details"
    ],
    "properties": {
        "name": {
            "type": "string",
            "default": "",
            "title": "The name Schema",
            "examples": [
                "name"
            ]
        },
        "item_type": {
            "type": "string",
            "default": "",
            "title": "The item_type Schema",
            "examples": [
                "scroll"
            ]
        },
        "rarity": {
            "type": "string",
            "default": "",
            "title": "The rarity Schema",
            "examples": [
                "rarity"
            ]
        },
        "level": {
            "type": "integer",
            "default": 0,
            "title": "The level Schema",
            "examples": [
                0
            ]
        },
        "spells": {
            "type": "array",
            "default": [],
            "title": "The spells Schema",
            "items": {
                "type": "string",
                "default": "",
                "title": "A Schema",
                "examples": [
                    ""
                ]
            },
            "examples": [
                [
                    ""]
            ]
        },
        "homebrew": {
            "type": "boolean",
            "default": false,
            "title": "The homebrew Schema",
            "examples": [
                false
            ]
        },
        "details": {
            "type": "string",
            "default": "",
            "title": "The details Schema",
            "examples": [
                "Item details"
            ]
        }
    },
    "examples": [{
        "name": "name",
        "item_type": "scroll",
        "rarity": "rarity",
        "level": 0,
        "spells": [
            ""
        ],
        "homebrew": false,
        "details": "Item details"
    }]
}